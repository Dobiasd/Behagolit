main = printLine message

message = concat "Hello, world!" "\n" answerSentence

answerSentence = tellFact "answer" theAnswer

theAnswer = ifElse True fourtyTwoRepr "No."

tellFact name value = concat "The " name " is: " value

fourtyTwoRepr = intToStr fourtyTwo

fourtyTwo = * 2 twentyOne
    twentyOne = fib 8

fib n = ifElse (< n 2) n (+ (fib (- n 1)) (fib (- n 2)))
